<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= product ? 'Edit Product' : 'Add Product' %></title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 20px;
      }
      .message {
        margin-bottom: 10px;
      }
      .user {
        font-weight: bold;
      }
      .date {
        color: gray;
        font-size: 0.9em;
      }
    </style>
  </head>
  <body>
  <h1><%= product ? 'Edit Product' : 'Create New Product' %></h1>

  <form action="<%= product ? '/product/' + product.id : '/product' %>" method="POST">
    <label for="name">Product Name:</label>
    <input type="text" name="name" id="name" required value="<%= product ? product.name : '' %>" />

    <label for="price">Price:</label>
    <input type="number" step="0.01" name="price" id="price" required value="<%= product ? product.price : '' %>" />

    <label for="category_id">Category (optional):</label>
    <select name="category_id" id="category_id">
      <% categories.forEach(category => { %>
        <option value="<%= category.id %>" <%= product && product.category_id == category.id ? 'selected' : '' %>>
          <%= category.name %>
        </option>
      <% }); %>
    </select>

    <button type="submit"><%= product ? 'Update Product' : 'Create Product' %></button>
  </form>
    <a href="/">Back</a>
  </body>
</html>
